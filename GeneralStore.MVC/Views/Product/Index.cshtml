@*let the View know what model we are dealing with*@
@model IEnumerable<GeneralStore.MVC.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>List of Products</h2>

<p>
    @Html.ActionLink("Create a Product", "Create")   @*Create = link ahref*@
</p>

<table class="table">
    @*Display names of Product properties*@
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventoryCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFood)
        </th>
        <th>
            @* ROW FOR EDIT, DETAILS & DELETE BUTTONS*@
        </th>
    </tr>
    @*ADD A ROW FOR OUR MODEL -- model is a collection so need a row to display each item*@
    @foreach (var item in Model) // Model fixed in Product Controller -- passed into View()
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFood)
            </td>
            <td>
                @*EDIT, DETAILS & DELETE BUTTONS*@
                @Html.ActionLink("Change", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("More Info", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.ProductId }) |
            </td>
        </tr>
    }
</table>